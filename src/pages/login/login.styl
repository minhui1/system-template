.P-login
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    background: linear-gradient(to bottom right, #e1f5fd , #baceff)
    .login-con
        position: absolute
        top: 50%
        left: 50%
        display: flex
        margin: -300px 0 0 -450px
        width: 900px
        height: 600px
        background: #6b29f8
        border-radius: 20px
        overflow: hidden
        box-shadow:20px 10px 50px rgba(130,152,207,0.8);
        .left-con
            position relative
            width: 550px
            height 100%
            background: #6b29f8
        .right-con
            position relative
            flex: 1
            // padding: 35px 36px 0
            height 100%
            background: #fff
            border-radius: 20px 0 0 20px
            .main-box
                position absolute
                width 100%
                padding: 0 30px
                top: 50%
                left 50%
                transform: translate(-50%,-50%)
        h2
            position relative
            z-index 2
            font-size: 40px
            font-weight: bold
            color: #FFF
            top 60px
            left 30px
            img
                margin-right: 10px
                height:32px     
        .img-con
            // margin-top: 100px
            position absolute
            bottom: 0
            left 0
            text-align: center
            img
                width: 550px
        h3
            margin-bottom: 0px
            font-size: 30px
            font-weight: bold
            color: #333
        .subtext
            margin-bottom: 30px
        .item
            display: flex;
            position relative
            align-items: center;
            margin-bottom: 20px
            input[type=text], input[type=password]
                display: block
                width: 100%
                height: 40px
                margin: 0 auto
                padding-left 10px
                border: solid 1px rgba(0,0,0,0.1)
                border-radius: 6px
                background: none
                color: #333
                font-size: 14px
                text-align: left 
                outline: none
                &::placeholder
                    color: #ccc
            .sup 
                display inline-block
                width 12px
                color: #f81d22
            .ipt-half
                width: 70%
                margin:0 auto       
                .ipt-code
                    float: left
                    width: 100px
            .codeImg
                width: 120px
                height: 40px
                float: right
                border:solid 1px rgba(255,255,255,0.4)
                border-radius: 6px
            
    .login-links
        text-align: right 
        span 
            display inline-block
            margin-left 12px
            cursor pointer
            color #1890ff
    .txtTip
        font-size: 14px
    
    .txtCode
        position absolute
        right 0
        display block
        color #1890ff
        


