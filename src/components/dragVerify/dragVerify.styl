.M-dragVerify
    overflow hidden
    @font-face
        font-family: "dragVerifyFont"
        src: url('data:application/x-font-woff;charset=utf-8;base64,') format('woff2')
    .dragVerifyFont
        font-family: "dragVerifyFont" !important
        font-size: 16px
        font-style: normal
        -webkit-font-smoothing: antialiased
        -moz-osx-font-smoothing: grayscale

    .ficon-double-right:before
        content: "\e61f"
    .dragVerify-wrapper
        position: relative
        height: 100%
    .show-text
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        text-align: center
    .drag-block
        position: absolute
        top: 0
        height: 100%
        text-align: center
        cursor: pointer
        user-select: none
        box-shadow: 0 0 3px rgba(0,0,0,0.3)
    .process-bar
        width: 0
        height: 100%
        transition: background .5s ease-in